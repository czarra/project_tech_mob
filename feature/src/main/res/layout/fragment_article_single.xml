<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


        <LinearLayout
            android:id="@+id/linerhide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeSpeaker"
                android:layout_width="match_parent"
                android:layout_height="100.5pt"
                android:paddingEnd="7.5pt"
                android:paddingStart="8pt">

                <ImageView
                    android:id="@+id/imageViewSpeakerDesc"
                    android:layout_width="43pt"
                    android:layout_height="43pt"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15.5pt"

                    />

                <TextView
                    android:id="@+id/textFirstNameSpeaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewSpeakerDesc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8pt"
                    android:text="New Text"
                    android:textSize="8.5pt"
                    android:letterSpacing="0.05"
                    />

                <TextView
                    android:id="@+id/textFunctionCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textFirstNameSpeaker"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.5pt"
                    android:text="Function at Company Name"
                    android:letterSpacing="0.05"
                    android:textSize="7pt"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeReadMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15.5pt"
                android:layout_marginStart="8pt"
                android:layout_marginTop="10pt">

                <TextView
                    android:id="@+id/textDescriptionSpeaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text2"
                    android:letterSpacing="0.05"
                    android:textSize="7pt"
                    />

                <TextView
                    android:id="@+id/textReadMoreSpeaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textDescriptionSpeaker"
                    android:layout_marginTop="10pt"
                    android:textSize="7pt"
                    android:letterSpacing="0.05"
                    android:gravity="start"
                    />

            </RelativeLayout>

        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBarShow"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp" />
</RelativeLayout>
</FrameLayout>